<div class="container">
  <h1><%= @cocktail.name %></h1>
    <ul class="list-group">
      <% @cocktail.doses.each do |dose| %>
        <li class="list-group-item">
         <%= dose.ingredient.name %>: <%= dose.description %>
          <%= link_to "delete", dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
        </li>
      <% end %>
    </ul>
  <p><%= link_to "+ add a dose", new_cocktail_dose_path(@cocktail) %></p>
  <p> <%= link_to "<< back to the list of cocktails", root_path %></p>
</div>
